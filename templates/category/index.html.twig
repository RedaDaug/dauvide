{% extends 'base.html.twig' %}

{% block title %}Produktų kategorijos{% endblock %}

{% block body %}
    <section id="produktai" class="bg-light">
        <div class="container mt-5 pt-5">
            <h1>Produktų kategorijos</h1>
            <div class="row mt-5 mb-5">
                {% for category in categories %}
                    <div class="col-lg-3 col-md-4 col-sm-6 col-6 mt-2 mb-2 p-md-2 p-1">
                        <a href="{{ path('category.show', {id: category.id}) }}" role="button" class="skalas">
                            <div class="bg-white category-card">
                                <img src=" {{ asset('img/' ~ category.imageName) }}" alt="purskiklis" width="90%">
                                <div class="category-name">{{ category.name }}</div>
                            </div>
                        </a>
                    </div>

                {% endfor %}

            </div>
        </div>
    </section>


{% endblock %}
