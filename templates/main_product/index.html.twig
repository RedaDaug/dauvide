{% extends 'base.html.twig' %}

{% block title %}Visi produktai{% endblock %}

{% block body %}
    <section id="breadcrumb">
        <div class="container mt-5">
            {% for mainProduct in mainProducts|slice (0,1) %}
                <ul class="breadcrumb">
                    <li><a href="{{ path('home') }}">Prad≈æia</a></li>
                    <li>Visi produktai</li>
                </ul>
            {% endfor %}
        </div>
    </section>
    <section id="produktai">
        <div class="container mt-1 text-center">
            <h2>Visi produktai</h2>
            <div class="row mt-2 mb-5">
                {% for mainProduct in mainProducts %}
                    <div class="col-lg-3 col-md-4 col-sm-6 col-6 mt-1 mb-1">
                        <div class="btn mt-5 mb-3 filterDiv">
                            <a href="{{ path('mainproduct.show', {id: mainProduct.id}) }}">
                                <div class="">
                                    <div><img src=" {{ asset('img/' ~ mainProduct.imageName) }}" alt="{{ mainProduct.name }}" style="width:80%;">
                                    </div>
                                    <div>{{ mainProduct.name }}</div>
                                </div>
                            </a>
                        </div>
                    </div>
                {% endfor %}

            </div>
        </div>
    </section>
{% endblock %}
