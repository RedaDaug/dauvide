{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
    <section id="produktai" class="bg-light">
        <div class="container mt-5 pt-5 text-center">
            <h3 class="text-dark">Produktai</h3>
            <div class="row mt-5 mb-5">
                {% for mainProduct in mainProducts %}
                    <div class="col-lg-3 col-md-4 col-sm-6 col-6 mt-2 mb-2">
                        <div role="button" class="btn mt-5 mb-3 skalas filterDiv">
                            <a href="{{ path('mainproduct.show', {id: mainProduct.id}) }}">
                                <div class="">
                                    <div>{{ mainProduct.name }}</div>
                                    <div> <img src=" {{ asset('img/' ~ mainProduct.imageName) }}" alt="hand" width="80%"></div>
                                </div>

                            </a>
                        </div>
                    </div>
                {% endfor %}

            </div>
        </div>
    </section>
{% endblock %}
