{% extends 'base.html.twig' %}

{% block title %}Sezono prekės{% endblock %}

{% block body %}
    <section id="breadcrumb">
        <div class="container mt-5">
            {% for mainProduct in mainProducts|slice (0,1) %}
                <ul class="breadcrumb">
                    <li><a href="{{ path('home') }}">Pradžia</a></li>
                    <li>Vasaros prekės</li>
                </ul>
            {% endfor %}
        </div>
    </section>
    <section id="produktai">
        <div class="container mt-1 text-center">
            <h2 class="text-dark">Vasaros prekės</h2>
            <div class="row mb-5">
                {% for mainProduct in mainProducts %}
                    <div class="col-lg-3 col-md-4 col-sm-6 col-12 mt-1 mb-1">
                        <div class="btn filterDiv">
                            <a href="{{ path('mainproduct.show', {id: mainProduct.id}) }}">
                                <div class="bg-white category-card p-1">
                                    <div> <img src=" {{ asset('img/' ~ mainProduct.imageName) }}" alt="{{ mainProduct.name }}" width="80%"></div>
                                    <div>{{ mainProduct.name }}</div>
                                </div>

                            </a>
                        </div>
                    </div>
                {% endfor %}

            </div>
        </div>
    </section>

    <section>
        {{ render(controller(
            'App\\Controller\\CategoryController::index')) }}
    </section>

{% endblock %}