{% extends 'base.html.twig' %}

{% block body %}
    <section id="produktai-kategorijoje">
        <div class="container mt-5 pt-5">
                        <h3>{% for product in products|slice (0,1) %}{{ product.mainProduct.category.id }}{% endfor %} </h3>
{#            <p> {{ product.mainProduct }}</p>#}


            <div class="row mt-3 mb-5">
                {% for product in products %}
                    <div class="col-lg-3 col-md-4 col-sm-6 col-6 text-center mt-2 mb-2">
                        <div role="button" class="btn mb-3">
                            {#                            <a class="btn mt-5 mb-3" href="{{ path('product.show', {id: product.id}) }}" role="button">#}
                            <img src="{{ asset('img/' ~ product.imageName) }}" alt="what" width="100%">
                            {#                            </a>#}
                            <div>{{ product.name }}</div>
                            <div>{{ product.category.id }}</div>
                        </div>
                    </div>
                {% endfor %}

            </div>

        </div>

    </section>
    <section>
        {% for product in products|slice (0,1) %}
        {{ render(controller(
            'App\\Controller\\MainProductController::listMainProducts', {id: product.mainProduct.category.id})) }}
        {% endfor %}
    </section>




{% endblock %}